{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",        /* Đổi từ nodenext sang CommonJS để ổn định hơn với Express */
    "moduleResolution": "node",
    "outDir": "./dist",         /* Nơi chứa file JS sau khi dịch */
    "rootDir": "./src",         /* Ép TypeScript chỉ nhìn vào folder src */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],      /* Quan trọng: Chỉ định biên dịch các file trong src */
  "exclude": ["node_modules", "**/*.test.ts"]
}